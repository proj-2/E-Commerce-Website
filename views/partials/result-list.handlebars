<li class="p-3 mb-3 bg-white border border-slate-200">
    <article class="sm:grid sm:grid-cols-12">
        <div class="sm:col-span-4 lg:col-span-3 xl:col-span-2 p-2 flex justify-center">
            <img src="/images/no-image-icon.jpg" alt="no image icon" class="border p-1 w-10/12 object-contain self-center" />
        </div>
        <div class="sm:col-span-8 lg:col-span-9 xl:col-span-8 py-2 px-1 sm:px-4">
            <h3 class="text-xl">{{name}}</h3>
            <p>{{description}}</p>
            <p>Listed By : {{user.first_name}} {{user.last_name}}</p>
            {{#if curRate}}
            <p>{{cur_convert price curRate}} {{currency}}</p>
            {{else}}
            <p class="text-lg">{{price}} USD</p>
            {{/if}}
            <div class="my-2">
                <a class="px-3 py-1 bg-stone-400 text-stone-900 rounded hover:bg-sky-900 hover:text-sky-200" href="/search/product/{{id}}">View Product</a>
            </div>
        </div>
    </article>
</li>