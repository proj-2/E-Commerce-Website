<div class="my-3 sm:my-3 px-1 sm:p-3">
  <button id="goBackButton"
    class="viewProductBtn px-3 py-1 bg-stone-400 text-stone-900 rounded hover:bg-sky-900 hover:text-sky-200">Return to
    Search Results</button>
  <section class="bg-sky-100 mt-1 lg:mt-4">
    {{#if products.length}}
    <ul class="existingListings p-2 sm:p-3">
      {{#each products as |product|}}
      <li class="p-1 sm:p-3 mb-3 bg-white border border-slate-200">
        {{> product product}}
        {{#if loggedIn}}
        <button id="orderProductBtn"
          class="viewProductBtn px-3 py-1 bg-stone-400 text-stone-900 rounded hover:bg-sky-900 hover:text-sky-200">Order
          Product</button>
        {{/if}}
      </li>
      {{/each}}
    </ul>
    {{/if}}
    {{#if loggedIn}}
    <script src="/javascript/order.js"></script>
    {{/if}}
  </section>
</div>
<script src="/javascript/gobackpage.js"></script>