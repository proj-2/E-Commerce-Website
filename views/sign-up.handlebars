<section class="flex justify-center my-8 md:my-16">
  <form id="signUpForm" class="mx-3 md:mx-7 w-12/12">
    <h2 class="text-3xl mb-3 md:mb-5 text-center sm:text-left">Sign Up</h2>
    <div class="text-lg">
      <div class="my-3 grid grid-cols-5">
        <label for="first-name-signup" class="col-span-2">First Name: </label>
        <input type="text" id="first-name-signup" class="col-span-3" />
      </div>
      <div class="my-3 grid grid-cols-5">
        <label for="last-name-signup" class="col-span-2">Last Name: </label>
        <input type="text" id="last-name-signup" class="col-span-3" /> 
      </div>
      <div class="my-3 grid grid-cols-5">
        <label for="email-signup" class="col-span-2">Email: </label>
        <input type="text" id="email-signup" class="col-span-3" />
      </div>
      <div class="my-3 grid grid-cols-5">
        <label for="password-signup" class="col-span-2">Password: </label>
        <input type="password" id="password-signup" class="col-span-3" />
      </div>
      <div class="my-3">
        <label for="re-password-signup">Re-enter Password: </label>
        <input type="password" id="re-enter-password-signup" />
      </div>
      <div class="my-3">
        <label for="currency-signup">Preferred Currency: </label>
        <select name="search-category" id="preferred-currency-signup" class="w-3/12">
          <option>CAD</option>
          <option>USD</option>
        </select>
      </div>
      <button type="submit" class="mt-3 px-3 py-1 bg-stone-200 text-stone-700 rounded hover:bg-sky-900 hover:text-sky-200">
        Sign up
      </button>
    </div>
  </form>
</section>

<script src="/javascript/sign-up.js"></script>