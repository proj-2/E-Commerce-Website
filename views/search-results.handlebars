<div class="sm:my-3 p-6">
  <h2 class="text-2xl mb-1">Search Results for {{title}}</h2>
  <a href="/" class="px-3 py-1 bg-stone-200 text-stone-900 rounded hover:bg-sky-900 hover:text-sky-200">
    Return to Search
  </a>
  <section class="bg-sky-100 mt-2">
    {{#if products.length}}
    <ul class="existingListings p-2 sm:p-3">
      {{#each products as |product|}}
      {{>result-list product}}
      {{/each}}
    </ul>
    {{/if}}
  </section>
</div>