<section class="my-3">
    <h2 class="text-3xl ml-3 mb-2">List an Item to Sell on the marketplace</h2>
    <form id="listItemForm" class="mx-3 p-2 border-2 border-black md:w-10/12 xl:w-6/12">
        <div class="m-2 text-lg">
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5">
                <label class="col-span-2" for="product-name">Product Name (required): </label>
                <input class="col-span-3 lg:col-span-2" type="text" id="product-name" placeholder="PRODUCT NAME">
            </div>
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5 flex">
                <label class="col-span-2" for="product-description" class="self-start">Description (required): </label>
                <textarea type="text" id="product-description" class="col-span-3 lg:col-span-2" placeholder="DESCRIPTION"></textarea>
            </div>
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5">
                <label class="col-span-2" for="product-price">Price (required): </label>
                <input class="col-span-3 lg:col-span-2" type="number" step="0.01" id="product-price" placeholder="PRICE"></input>
            </div>
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5">
                <label class="col-span-2" for="product-SKU">SKU (required): </label>
                <input class="col-span-3 lg:col-span-2" type="number" id="product-SKU" placeholder="SKU"></input>
            </div>
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5">
                <label class="col-span-2" for="product-origin">Shipping From (required): </label>
                <input class="col-span-3 lg:col-span-2" type="text" id="product-origin" placeholder="SHIPPING FROM"></input>
            </div>
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5">
                <label class="col-span-2" for="product-category">Product Category (required): </label>
                <select id="product-category" name="product-category" class="col-span-2 lg:col-span-1">
                    <option value="1">Hardware</option>
                    <option value="2">Software</option>
                </select>
            </div>
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5">
                <label class="col-span-2" for="product-shipping">Shipping Provider (required): </label>
                <select id="product-shipping" name="product-shipping" class="col-span-2 lg:col-span-1">
                    <option value="1">UPS</option>
                    <option value="2">FEDEX</option>
                    <option value="3">DHL</option>
                </select>
            </div>
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5">
                <label class="col-span-2" for="product-stock">Stock (required): </label>
                <input class="col-span-3 lg:col-span-2" type="number" id="product-stock" placeholder="STOCK"></input>
            </div>
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5">
                <label class="col-span-2" for="product-length">Length (optional): </label>
                <input class="col-span-3 lg:col-span-2" type="number" id="product-length" placeholder="LENGTH"></input>
            </div>
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5">
                <label class="col-span-2" for="product-width">Width (optional): </label>
                <input class="col-span-3 lg:col-span-2" type="number" id="product-width" placeholder="WIDTH"></input>
            </div>
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5">
                <label class="col-span-2" for="product-height">Height (optional): </label>
                <input class="col-span-3 lg:col-span-2" type="number" id="product-height" placeholder="HEIGHT"></input>
            </div>
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5">
                <label class="col-span-2" for="product-dimension-units">Dimension Units (optional): </label>
                <input class="col-span-3 lg:col-span-2" type="text" id="product-dimension-units" placeholder="DIMENSION UNITS"></input>
            </div>
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5">
                <label class="col-span-2" for="product-weight">Weight (optional): </label>
                <input class="col-span-3 lg:col-span-2" type="number" id="product-weight" placeholder="WEIGHT"></input>
            </div>
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5">
                <label class="col-span-2" for="product-weight-units">Weight Units (optional): </label>
                <input class="col-span-3 lg:col-span-2" type="text" id="product-weight-units" placeholder="WEIGHT UNITS"></input>
            </div>
            <div class="my-3 grid grid-cols-1 sm:grid-cols-5">
                <label class="sm:col-span-2" >Tags (required): </label>
                <div class="sm:col-span-3">
                    {{#each tags}}
                    <input type="checkbox" name="product-tag" id="product-tag" value="{{id}}" class="ml-3">
                    <label for="product-tag">{{name}}</label>
                    {{/each}}
                </div>
            </div>
            <div>
                <button id="listItemBtn" type="submit" class="m-2 bg-stone-200 px-3 py-1 text-stone-900 hover:bg-sky-900 hover:text-sky-200 rounded">List Item</button>
            </div>
        </div>
    </form>
</section>

<script src="/javascript/listing-form.js"></script>