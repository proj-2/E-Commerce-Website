<div class="my-3 p-3 grid grid-cols-12">
    <div class="col-span-12 sm:col-span-3 grid-cols-2">
        <h2 class="text-3xl">My Orders</h2>
        {{#if orders.length}}
        <div class="invisible sm:visible sm:ml-1 sm:mt-3">
            <a href="/checkout" class="bg-stone-200 px-3 py-1.5 text-stone-900 hover:bg-sky-900 hover:text-sky-200 rounded">
                Proceed to checkout
            </a>
        </div>
        {{/if}}
    </div>
    <section class="bg-sky-100 mt-2 sm:ml-4 col-span-12 sm:col-span-9 lg:col-span-7 xl:col-span-6">
        {{#if orders.length}}
        <ul class="p-2 sm:p-3">
            {{#each orders as |order|}}
            <li class="grid grid-cols-12 p-1 mb-3 bg-white border border-slate-200">
                {{>order-partial order}}
                <div class="col-span-12 sm:col-span-2 lg:col-span-1 self-start sm:self-center m-2 sm:m-0">
                    <button id="orderDeleteBtn" data-id="{{id}}" class="px-3 py-1 bg-stone-400 text-stone-900 rounded hover:bg-rose-600 hover:text-rose-200">
                        Remove Item
                    </button>
                </div>
            </li>
            {{/each}}
        </ul>
        {{else}}
        <h3 class="ml-1 pt-1 pb-20 text-lg">No Items Added to your Order</h3>
        {{/if}}
    </section>
    {{#if orders.length}}
    <div class="col-span-12 my-5 visible sm:invisible">
        <a href="/checkout" class="ml-1 bg-stone-200 px-3 py-1.5 text-stone-900 hover:bg-sky-900 hover:text-sky-200 rounded">
            Proceed to checkout
        </a>
    </div>
    {{/if}}
</div>

{{#if orders.length}}
<script src="/javascript/my-orders.js"></script>
{{/if}}