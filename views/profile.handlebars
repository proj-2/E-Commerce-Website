<h2>My Profile</h2>

<h3>Post a New Listing</h3>
<button id="newlistingBtn">New Item</button>

{{#if products.length}}
<h3>My Existing Listings</h3>
<ul class="existingListings">
    {{#each products as |product|}}
    <li>
        {{> product product}}
        <a class="viewProductBtn" href="/search/product/{{product.id}}">View Product</a>
    </li>
    {{/each}}
</ul>
{{/if}}

<script src="/javascript/profile.js"></script>